<%= provide(:login, "active")%>
<%= provide(:title,"Log in")%>
<div class="page-header">
    <div class="container" align="center">
      <h2>Iniciar Sesion</h2>
    </div>
</div>
<div class="container">
    <div class="row">
    <div class="col-sm-3"> </div>  
    <div class="col-sm-3 col-md-6"> 

      <% if notice %>
            <p class="alert alert-success"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button><%= notice %></p>
          <% end %>
        <% if alert %>
            <p class="alert alert-danger"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button><%= alert %></p>
        <% end %>

<%= form_for(resource, as: resource_name, class: "form-signin" , url: session_path(resource_name))do |f| %>
  <div class="form-group">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me  %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Ingresar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>
 <div class="col-sm-3"> </div> 
</div>
</div>